@model IEnumerable<LexiconLMSPortal.Models.ViewModels._StudentListPartial>

@{
    Layout = "";
}


<div id="FullStudentList">
    @using (Html.BeginForm())
    {
        <div class="FullListSearchBody">
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-default ListCreateButtonFullList" type="submit" ><span class="glyphicon glyphicon-menu-right"></span></button>
                    @Html.TextBox("search",null, new { @class= "form-control FullListTextField", placeholder="Search Student..."})
                    
                </span>          
            </div>

        </div>
    }
    <table class="table table-hover">
        <tr>
    <th>
        @Html.ActionLink("Student", "FullStudentList", new { sortOrder = ViewBag.NameSort })
    </th>
    <th>
        @Html.ActionLink("Email", "FullStudentList", new { sortOrder = ViewBag.EmailSort })
    </th>
    <th>
        @Html.ActionLink("Course", "FullStudentList", new { sortOrder = ViewBag.CourseSort })
    </th>
</tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseId.Name)
        </td>
        <td>
            <a href="@Url.RouteUrl("Default", new {controller = "Teacher", action = "EditStudentFullList", id = item.Id })" class="ajax-link-edit TeacherLinkIcon" data-target="#EditStudentModalFullList"><span class="glyphicon glyphicon-pencil edit-button"></span></a>
            <a href="@Url.RouteUrl("Default", new {controller = "Teacher", action = "DeleteStudentFullList", id = item.Id })" class="ajax-link-remove TeacherLinkIcon" data-target="#DeleteStudentModalFullList"><span class="glyphicon glyphicon-remove-circle delete-button"></span></a>
        </td>
    </tr>
}

    </table>
</div>
<div id="EditStudentModalFullList"></div>
<div id="DeleteStudentModalFullList"></div>
