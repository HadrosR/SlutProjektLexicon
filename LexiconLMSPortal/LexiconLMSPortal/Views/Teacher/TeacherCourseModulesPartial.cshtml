@model LexiconLMSPortal.Models.ViewModels.ModulesViewViewModel

<div id="TeacherCourseModulesPartial">
    <a class="ajax-link btn btn-default" href="@Url.RouteUrl("Default", new {controller = "Teacher", action = "CreateModule", id = Model.Id })" data-target="#CreateModuleModal">Add Module</a>

    <div class="panel-group" id="module-accordion" role="tablist" aria-multiselectable="true">
        @{int moduleid = 0; }
        @foreach (var item in Model.Modules)
        {
            <div class="panel panel-default">
                <div class="panel-heading module-accordion-heading" role="tab" id="@Html.Raw("heading" + moduleid)" tooltip="@Html.DisplayFor(modelItem => item.Description)">
                    <div class="row">
                        <div class="col-xs-4">
                            <h4 class="panel-title">
                                <a class="module-accordion-link" role="button" data-toggle="collapse" data-parent="#module-accordion" href="@Html.Raw("#collapse" + moduleid)" aria-expanded="true" aria-controls="@Html.Raw("#collapse" + moduleid)">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </a>
                            </h4>
                        </div>
                        <div class="col-xs-4">@Html.DisplayFor(modelItem => item.StartDate) to @Html.DisplayFor(modelItem => item.EndDate)</div>
                        <div class="col-xs-4" style="text-align:right;">
                            <a class="ajax-link-edit" data-target="#EditModuleModal" href="@Url.RouteUrl("Default", new {controller = "Teacher", action = "EditModule", id = item.Id })"><span class="glyphicon glyphicon-pencil edit-cog"></span></a>
                            <a class="ajax-link-remove" data-target="#DeleteModuleModal" href="@Url.RouteUrl("Default", new {controller = "Teacher", action = "DeleteModule", id = item.Id })"><span class="glyphicon glyphicon-remove-circle edit-cog"></span></a>
                        </div>
                    </div>

                </div>
                <div id="@Html.Raw("collapse" + moduleid)" class="panel-collapse collapse" role="tabpanel" aria-labelledby="@Html.Raw("heading" + moduleid)">
                    @foreach (var activity in item.Activities)
                {
                        <div class="panel-body" tooltip="@Html.DisplayFor(modelItem => activity.Description)">
                            <div class="row">
                                <div class="col-xs-4">@Html.DisplayFor(modelItem => activity.Name)</div>
                                <div class="col-xs-4">@Html.DisplayFor(modelItem => activity.StartDate) to @Html.DisplayFor(modelItem => activity.EndDate)</div>
                                <div class="col-xs-4" style="text-align:right;"><a href="#"><span class="glyphicon glyphicon-cog edit-cog" title="Options"></span></a></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            moduleid++;

        }
    </div>
</div>