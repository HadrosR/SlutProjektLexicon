@model LexiconLMSPortal.Models.ViewModels.ModulesViewViewModel

@{
    ViewBag.Title = Model.Name;
}

<h2>@Html.DisplayFor(model => model.Name)</h2>
<p>@Html.DisplayFor(model => model.Description)</p>
<h3>Modules</h3>

<div class="row">
    <div class="col-xs-8">
        @foreach (var item in Model.Modules) {
            <div class="col-xs-12 course-module" tooltip="@Html.DisplayFor(modelItem => item.Description)">
                <div class="row">
                    <div class="col-xs-4"><h3>@Html.DisplayFor(modelItem => item.Name)</h3></div>
                    <div class="col-xs-4">
                        <p>@Html.DisplayFor(modelItem => item.StartDate) to<br />@Html.DisplayFor(modelItem => item.EndDate)</p>
                    </div>
                    <div class="col-xs-4">
                        <div class="col-xs-12" style="height:33%;">&nbsp;</div>
                        <div class="col-xs-12" style="height:33%; text-align:right;"><a href="#"><span class="glyphicon glyphicon-cog edit-cog" title="Options"></span></a></div>
                        <div class="col-xs-12" style="height:33%;">&nbsp;</div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

