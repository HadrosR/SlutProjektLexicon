@model LexiconLMSPortal.Models.ViewModels.CourseViewModel
@{
    ViewBag.Title = Model.Name;
}

<div class="row ListRow"  style="margin-top: 2%">
    <div class="col-md-5 ListModulNameHead">
        <h1>@Html.DisplayFor(model => model.Name)</h1>
    </div>
    <div class="col-md-7 ListDateED" style="padding-left:1%">
        <p>@Html.DisplayFor(model => model.Description)</p>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-xs-8">
        <!-- Documents -->
        @Html.Action("DocumentCourseList", "Document", new { id = Model.Id})

        <!-- Modules -->

        <div class="ListBlock panel-default">
            <div class="panel-body">
                <div style="font-size:20px; padding-bottom:10px; ">
                    <div style="float:left; padding-top:5px;">Modules</div>
                    <div style="text-align:right;"><a class="ajax-link btn btn-default ListCreateButton" href="@Url.RouteUrl("Default", new {controller = "Teacher", action = "CreateModule", id = Model.Id })" data-target="#CreateModuleModal"><span class="glyphicon glyphicon-plus-sign"></span> Module</a></div>
                </div>
                @Html.Action("TeacherCourseModulesPartial", "Teacher")
            </div>
        </div>
    </div>
    <div id="SList" class=" col-sm-push-1 col-xs-4 col-sm-3">
        @Html.Action("_StudentListPartial", "Teacher")
    </div>
</div>


<!-- modal placeholders-->

<div id="CreateStudentModal"></div>
<div id="EditStudentModal"></div>
<div id="DeleteStudentModal"></div>

<div id="CreateModuleModal"></div>
<div id="EditModuleModal"></div>
<div id="DeleteModuleModal"></div>

<div id="CreateActivityModal"></div>
<div id="EditActivityModal"></div>
<div id="DeleteActivityModal"></div>

<div id="CreateDocumentModal"></div>
<div id="DeleteDocumentModal"></div>