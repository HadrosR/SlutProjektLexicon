@model IEnumerable<LexiconLMSPortal.Models.ViewModels.ModulesViewViewModel>

@{
    ViewBag.Title = "Course";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Modules.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modules.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modules.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modules.EndDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Modules) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

