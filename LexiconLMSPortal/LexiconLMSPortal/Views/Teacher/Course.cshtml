@model LexiconLMSPortal.Models.ViewModels.CourseViewModel
@{
    ViewBag.Title = Model.Name;
}

<h1>@Html.DisplayFor(model => model.Name)</h1>
<p>@Html.DisplayFor(model => model.Description)</p>

<hr />

<div class="row">
    <div class="col-xs-8">
        <!-- Documents -->
        <div class="panel panel-default">
            <div class="panel-heading" style="font-size:20px;">
                <div style="float:left;">Documents</div>
                <div style="text-align:right;"><a class="ajax-link btn btn-default" href="@Url.RouteUrl("Default", new {controller = "Teacher", action = "CreateModule", id = Model.Id })" data-target="#CreateModuleModal"><span class="glyphicon glyphicon-plus-sign"></span> Document</a></div>
            </div>

            <ul class="list-group">
                @foreach (var doc in Model.Documents)
                {
                    <li class="list-group-item">
                        <div style="float:left;">
                            <a href="@Url.RouteUrl("Default", new {controller = "Document", action = "GetFile", id = doc.Id })" tooltip="@Html.DisplayFor(model => doc.Description)"><span class="glyphicon glyphicon-file"></span> @Html.DisplayFor(model => doc.Name)</a>
                        </div>
                        <div style="text-align:right">
                            <a href="@Url.RouteUrl("Default", new { controller = "Teacher", action = "EditStudent", id = 0 })" class="ajax-link-edit TeacherLinkIcon" data-target="#EditStudentModal"><span class="glyphicon glyphicon-pencil edit-button"></span></a>
                            <a href="@Url.RouteUrl("Default", new { controller = "Teacher", action = "DeleteStudent", id = 0 })" class="ajax-link-remove TeacherLinkIcon" data-target="#DeleteStudentModal"><span class="glyphicon glyphicon-remove-circle delete-button"></span></a>
                        </div>
                    </li>
                }
            </ul>
        </div>
        <!-- Modules -->
        <div class="panel panel-default">
            <div class="panel-body">
                <div style="font-size:20px; padding-bottom:10px; ">
                    <div style="float:left; padding-top:5px;">Modules</div>
                    <div style="text-align:right;"><a class="ajax-link btn btn-default" href="@Url.RouteUrl("Default", new {controller = "Teacher", action = "CreateModule", id = Model.Id })" data-target="#CreateModuleModal"><span class="glyphicon glyphicon-plus-sign"></span> Module</a></div>
                </div>
                @Html.Action("TeacherCourseModulesPartial", "Teacher")
            </div>
        </div>
    </div>
    <div id="SList" class=" col-sm-push-1 col-xs-4 col-sm-3">
        @Html.Action("_StudentListPartial", "Teacher")
    </div>
</div>


<!-- modal placeholders-->
<div id="TheModal" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div id="modal-content">
                </div>
            </div>
        </div>
    </div>
</div>

<div id="EditStudentModal"></div>
<div id="DeleteStudentModal"></div>

<div id="CreateModuleModal"></div>
<div id="EditModuleModal"></div>
<div id="DeleteModuleModal"></div>

<div id="CreateActivityModal"></div>
<div id="EditActivityModal"></div>
<div id="DeleteActivityModal"></div>
