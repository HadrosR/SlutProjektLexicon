@model IEnumerable<LexiconLMSPortal.Models.ViewModels.CourseViewModel>

@*Creates the list*@
<div id="CList">
    @foreach (var item in Model)
    {
        @*Makes it so that the Description is displayed as a tooltop on the side*@
        <div class="">
            <div tooltip="@Html.DisplayFor(modelItem => item.Description)" style="position:relative;">
                @*Make it so if you click it it will take you to that course view*@
                <a href="@Url.Action("Course","Teacher", new { id = item.Id})" class="TeacherLink"></a>
                <div class="row ListRow">
                    <div class="col-md-4 ListName">

                        <h2>
                            @Html.DisplayFor(modelItem => item.Name)
                        </h2>
                    </div>
                    @*Prints all the start and end date to the center of the "button"*@
                    <div class="col-md-8 ListDateED">
                        <div class="col-md-5 col-md-offset-1">
                            <div class="vertical-align"><span class="glyphicon glyphicon-calendar calendar-icon"></span>@Html.DisplayFor(modelItem => item.StartDate) <br /> @Html.DisplayFor(modelItem => item.EndDate)</div>
                        </div>
                        <div class="text-right col-md-6">
                            @*2 icons for edit and delete*@
                            <a href="@Url.RouteUrl("Default", new {controller = "Teacher", action = "EditCourse", id = item.Id })" class="ajax-link TeacherLinkIcon" data-target="#EditCourseModal"><span class="glyphicon glyphicon-pencil edit-button"></span></a>
                            <a href="@Url.RouteUrl("Default", new {controller = "Teacher", action = "DeleteCourse", id = item.Id })" class="ajax-link TeacherLinkIcon" data-target="#DeleteCourseModal"><span class="glyphicon glyphicon-remove-circle delete-button"></span></a>
                        </div>
                    </div>


                </div>
            </div>
        </div>

    }
</div>