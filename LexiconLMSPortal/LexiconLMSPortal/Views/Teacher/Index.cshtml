@model IEnumerable<LexiconLMSPortal.Models.ViewModels.CourseViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div  class="col-md-8">
        
        @foreach (var item in Model)
        {
            <div id="TeacherCourseList" tooltip="@Html.DisplayFor(modelItem => item.Description)">
                <div>
                    <h1>
                        @Html.DisplayFor(modelItem => item.Name)
                    </h1>
                </div>
            <div class="text-center">
                Starts:
                @Html.DisplayFor(modelItem => item.StartDate)
            </div>
            <div class="text-center">
                Ends:
                @Html.DisplayFor(modelItem => item.EndDate)
            </div>
            <div class="text-right" style="color:black">
                <a href="@Url.Action("Delete","Teacher")">
                    <i class="glyphicon glyphicon-remove-circle"></i>
                </a>
                <a href="@Url.Action("Edit","Teacher")">
                    <i class="glyphicon glyphicon-pencil"></i>
                </a>
            </div>

        </div>  
        }
                      
    </div>
    <div>
        @Html.Action("_TeacherListPartial", "Teacher")
    </div>
</div>


