@model LexiconLMSPortal.Models.ViewModels.ScheduleViewModel

<div class="row ListRow">
    <div class="col-xs-4 ListActivityName">
        <h4 style="margin-bottom: 8px; margin-left: 7.5%">Week: @ViewBag.Week</h4>
    </div>
    <div class="col-xs-8 ListDateED"></div>
</div>
