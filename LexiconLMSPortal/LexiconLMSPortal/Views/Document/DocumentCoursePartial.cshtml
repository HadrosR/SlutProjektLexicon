@model LexiconLMSPortal.Models.ViewModels.DocumentCourseViewModel

<div id="@Html.Raw("DocumentCoursePartial"+Model.CourseId)">
    <div class="panel panel-default">
        <div class="panel-heading" style="font-size:20px;">
            <div style="display:inline-block; padding-bottom:6px;">Documents</div>
            @if(User.IsInRole("Teacher"))
            { 
                <div style="float:right; display:inline-block;"><a class="ajax-link btn btn-default ListCreateButton" href="@Url.RouteUrl("Default", new {controller = "Document", action = "AddDocumentCourse", id = Model.CourseId })" data-target="#CreateDocumentModal"><span class="glyphicon glyphicon-plus-sign"></span> Document</a></div>
            }
        </div>

        <ul class="list-group">
            @foreach (var doc in Model.Documents)
            {
                <li class="list-group-item">
                    <div style="display:inline-block;">
                        <a target="_blank" href="@Url.RouteUrl("Default", new {controller = "Document", action = "GetFile", id = doc.Id })"><span class="glyphicon glyphicon-file"></span> @Html.DisplayFor(model => doc.Name)</a>
                    </div>
                    @if(User.IsInRole("Teacher"))
                    { 
                    <div style="display:inline-block; float:right;">
                        <a href="@Url.RouteUrl("Default", new { controller = "Teacher", action = "DeleteStudent", id = 0 })" class="ajax-link-remove TeacherLinkIcon" data-target="#DeleteStudentModal"><span class="glyphicon glyphicon-remove-circle delete-button"></span></a>
                    </div>
                    }
                </li>
            }
        </ul>
    </div>
</div>